<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-4">
  <div class="col-8 offset-2">
    <h3 class="mb-3">Create new Listing</h3>
    <form action="/listings" method="post" novalidate class="needs-validation">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          placeholder="Enter a catchy title"
          class="form-control"
          type="text"
          name="listing[title]"
          required
        />
        <div class="invalid-feedback">Enter a catchy title!</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          placeholder="Write about your place"
          name="listing[description]"
          required
        ></textarea>
        <div class="invalid-feedback">Let people know about your place</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image</label>
        <input
          class="form-control"
          placeholder="Enter image url/link"
          type="text"
          name="listing[image]"
        />
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">price</label>
          <input
            placeholder="1200"
            class="form-control"
            type="number"
            name="listing[price]"
            required
          />
          <div class="invalid-feedback">Need cost / night</div>
        </div>
        <div class="mb-3 col-md-8">
          <label class="form-label" for="country">Country`</label>
          <input
            placeholder="India, USA, etc"
            type="text"
            class="form-control"
            name="listing[country]"
            required
          />
          <div class="invalid-feedback">Enter valid country</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          placeholder="Jaipur, Delhi, Lucknow, etc"
          type="text"
          name="listing[location]"
          required
        />
        <div class="invalid-feedback">Enter valid location</div>
      </div>
      <button class="btn btn-dark add-btn mt-3">Add</button>
      <br /><br />
    </form>
  </div>
</div>
