<% layout("/layouts/boilerplate.ejs") %>
<div class="row mt-4">
  <div class="col-8 offset-3">
    <h3 class="mb-3">Listing Details</h3>
  </div>
  <div class="card col-6 offset-3 show-card">
    <img
      src="<%= listing.image %>"
      class="card-img-top show-img"
      alt="listing_image"
    />
    <div class="card-body">
      <p class="card-text">
        <b><%= listing.title %></b> <br /><br />
        <%= listing.description %><br /><br />
        <b> &#8377; <%= listing.price.toLocaleString("en-IN") %> </b><br />
        <b></b> <%= listing.location %>, <%= listing.country %><br />
        <%= listing.image %> <br />
      </p>
    </div>
  </div>
</div>
<div class="btns">
  <a
    class="btn btn-dark add-btn col-1 offset-3"
    href="/listings/<%= listing._id %>/edit"
    >Edit
  </a>
  <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
    <button class="btn btn-dark offset-5">Delete</button>
  </form>
</div>
